<h2>User Details</h2>
<dl class="dl-horizontal">
  <dt><strong>Fullname:</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.count > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead"><%= "#{@user.first_name} is currently not tracking any stocks." %></p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-primary" %>
